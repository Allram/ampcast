{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "assets/*": [ "assets/*" ],
            "components/*": [ "components/*" ],
            "hooks/*": [ "hooks/*" ],
            "styles/*": ["styles/*"],
            "types/*": [ "types/*" ],
            "utils/*": [ "utils/*" ]
        },
        "typeRoots": [
            "node_modules/musickit-typescript",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "www",
        "www-dev",
        "node_modules"
    ]
}