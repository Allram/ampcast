{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "types/*": [ "types/*" ],
            "components/*": [ "components/*" ],
            "hooks/*": [ "hooks/*" ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "build",
        "server",
        "node_modules"
    ]
}